<header class="jumbotron subhead" id="overview">
    <h1>Cleaning Requests</h1>
</header>

<section>
    <div class="row-fluid">
        <div class="span12">
            <ul class="nav nav-pills">
                <li>
                    <a href="/singularity/requests" data-route="requests">Active</a>
                </li>
                <li>
                    <a href="/singularity/requests/paused" data-route="requests/paused">Paused</a>
                </li>
                <li>
                    <a href="/singularity/requests/pending" data-route="requests/pending">Pending</a>
                </li>
                <li class="active">
                    <a href="/singularity/requests/cleaning" data-route="requests/cleaning">Cleaning</a>
                </li>
            </ul>
        </div>
    </div>
</section>

<section>
    <div class="row-fluid">
        <input type="search" placeholder="Filter requests..." required />
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{#if requests.length}}
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Timestamp</th>
                            <th>Cleaning Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn requests}}
                            <tr data-request-id="{{ id }}">
                                <td>{{#hardBreak id}}{{/hardBreak}}</td>
                                <td>{{ user }}</td>
                                <td data-value="{{ timestamp }}">{{ timestampHuman }}</td>
                                <td>{{ cleanupType }}</td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            {{else}}
                {{#if collectionSynced}}
                    <center><p>No cleaning requests.</p></center>
                {{else}}
                    <div class="page-loader centered"></div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</section>