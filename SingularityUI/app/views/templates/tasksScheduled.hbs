<header class="jumbotron subhead" id="overview">
    <h1>Scheduled Tasks</h1>
</header>

<section>
    <div class="row-fluid">
        <div class="span12">
            <ul class="nav nav-tabs">
                <li>
                    <a href="/singularity/tasks" data-route="tasks">Active</a>
                </li>
                <li class="active">
                    <a href="/singularity/tasks/scheduled" data-route="tasks/scheduled">Scheduled</a>
                </li>
                <li>
                    <a href="/singularity/tasks/cleaning" data-route="tasks/cleaning">Cleaning</a>
                </li>
            </ul>
        </div>
    </div>
</section>

<section>
    <input type="search" placeholder="Filter tasks..." required />
    <div class="row-fluid">
        <div class="span12">
            {{#if tasks.length}}
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Next run</th>
                            <th data-sortable="false"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn tasks}}
                            <tr data-task-id="{{ id }}">
                                <td><span title="{{ id }}">{{#hardBreak name}}{{/hardBreak}}</span></td>
                                <td data-value="{{ nextRunAt}}"><span title="{{ nextRunAt }}">{{ nextRunAtHuman }}</span></td>
                                <td>
                                    <a data-task-id="{{ id }}" data-action="viewJSON">JSON</a>
                                    &nbsp;&nbsp;
                                    <a data-task-id="{{ id }}" data-action="run-now" data-url="{{ url }}">Run now</a>
                                </td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            {{else}}
                <center><p>No scheduled tasks.</p></center>
            {{/if}}
        </div>
    </div>
</section>