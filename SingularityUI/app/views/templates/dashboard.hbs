<header class="jumbotron subhead" id="overview">
    <h1>Singularity</h1>
</header>

<section>
    <div class="page-header">
        <h1>Hosts</h1>
    </div>
    <div class="row-fluid">
        <table class="table" data-sortable>
            <thead>
                <tr>
                    <th>Hostname</th>
                    <th>Driver status</th>
                    <th>Uptime</th>
                    <th>Time since last offer</th>
                </tr>
            </thead>
            <tbody>
                {{#eachWithFn state.hostStates}}
                    <tr>
                        <td>{{#hardBreak hostname}}{{/hardBreak}}</td>
                        <td>{{ driverStatusHuman }}</td>
                        <td data-value="{{ uptime }}">{{ uptimeHuman }}</td>
                        <td data-value="{{ millisSinceLastOffer }}">{{ millisSinceLastOfferHuman }}</td>
                    </tr>
                {{/eachWithFn}}
            </tbody>
        </table>
    </div>
</section>

