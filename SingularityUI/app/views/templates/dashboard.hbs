<header class="jumbotron subhead" id="overview">
    <h1>Singularity</h1>
</header>

<section>
    <div class="page-header">
        <h1>Starred Requests</h1>
    </div>
    <div class="row-fluid">
        {{#if requests.length}}
            <table class="table" data-sortable>
                <thead>
                    <tr>
                        <th data-sortable="false"></th>
                        <th>Request</th>
                        <th>Requested</th>
                        <th>Deploy User</th>
                        <th>Instances</th>
                    </tr>
                </thead>
                <tbody>
                    {{#eachWithFn requests}}
                        <tr data-request-id="{{ id }}">
                            <td><a class="star" data-request-id="{{ id }}" data-action="unstar" data-starred="true">★</a></td>
                            <td><span title="{{ id }}"><a href="/singularity/request/{{ id }}" data-route="request/{{ id }}">{{#hardBreak id}}{{/hardBreak}}</a></span></td>
                            <td data-value="{{ timestamp }}"><span title="{{ timestamp }}">{{ timestampHuman }}</span></td>
                            <td>{{ deployUser }}</td>
                            <td>{{ instances }}</td>
                        </tr>
                    {{/eachWithFn}}
                </tbody>
            </table>
        {{else}}
            <center><p>No starred requests.</p></center>
        {{/if}}
    </div>
</section>

{{#if requestsNotFound.length}}
    <section>
        <div class="page-header">
            <h1>Starred Non-active Requests</h1>
        </div>
        <div class="row-fluid">
            <table class="table" data-sortable>
                <thead>
                    <tr>
                        <th data-sortable="false"></th>
                        <th>Request</th>
                    </tr>
                </thead>
                <tbody>
                    {{#eachWithFn requestsNotFound}}
                        <tr data-request-id="{{ id }}">
                            <td><a class="star" data-request-id="{{ id }}" data-action="unstar" data-starred="true">★</a></td>
                            <td>{{#hardBreak id}}{{/hardBreak}}</td>
                        </tr>
                    {{/eachWithFn}}
                </tbody>
            </table>
        </div>
    </section>
{{/if}}